          {{/link-li}}
          {{#link-li}}
            {{#link-to 'hn.show'}}Show HN{{/link-to}}
          {{/link-li}}
        </ul>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="input-group">
          <span class="input-group-addon octicon octicon-search"></span>
          {{input action="hnSearch" class="form-control" placeholder="Search..."}}
        </div>
      </div>
    </div>
  </div>
  {{outlet}}
</div>
